<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="dh.weighttracker"
      android:versionCode="1"
      android:versionName="1.0">
    <uses-sdk android:minSdkVersion="10" />
    <uses-permission android:name="android.permission.READ_CONTACTS"></uses-permission>

    <application android:icon="@drawable/icon" android:label="@string/app_name">
        <activity android:label="@string/app_name" android:name="WeightTrackerActivity" android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.WeightEntryActivity" android:launchMode="singleTop"></activity>
        <activity android:name=".view.SettingsActivity"></activity>
        <activity android:name=".view.EmailsChooserActivity"></activity>
        <activity android:name=".view.WeightHistoryActivity"></activity>

    </application>
</manifest>